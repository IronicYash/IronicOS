# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C source files
[*.c]
indent_style = tab
indent_size = 4

# C header files
[*.h]
indent_style = tab
indent_size = 4

# Assembly source files
[*.asm]
indent_style = tab
indent_size = 4

# Linker scripts
[*.ld]
indent_style = space
indent_size = 2

# Makefile (tabs are required)
[Makefile]
indent_style = tab

# Markdown and text files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false